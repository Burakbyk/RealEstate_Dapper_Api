@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="display:none">#ID</th>
                                <th scope="col">#</th>
                                <th scope="col">Ad Soyad</th>
                                <th scope="col">Ünvan</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Resim</th>
                                <th scope="col">Durum</th>                            
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>

                                    <td style="display:none;">@item.EmployeeID</td>

                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>
                                      @item.Title
                                    </td>
                                    <td>@item.Mail</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <img style="width:50px;  display: block;
                                        margin-left: auto;
                                        margin-right: auto;" src="@item.ImageUrl" />
                                    </td>
                                    @if(item.Status==true)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }

                                  


                                    <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
                                  
                                </tr>

                            }
                        </tbody>
                    </table>
                    <a href="/Employee/CreateEmployee/" class="btn btn-outline-info">Yeni Çalışan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>




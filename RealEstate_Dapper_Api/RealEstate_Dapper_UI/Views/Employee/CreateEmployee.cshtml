@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Çalışan Ekleme Sayfası</h6>
                <form method="post" enctype="multipart/form-data">

                    <label>Adı Soyadı:</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <br />

                    <label>Ünvan</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />

                    <label>E-Posta</label>
                    <input type="text" asp-for="Mail" class="form-control" />
                    <br />                 

                    <label>Telefon Numarası </label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                    <br />

                    <label>Resim </label>
                    <input type="file" name="imageFile" class="form-control" />
                    <br />
                  

                   


                    <button class="btn btn-primary">Çalışanı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>



